{% extends "book_detail/clipping.jinja2" %}
{% block clipping_content %}
<form
        {{ hx_link(data.actions_map.save.url) }}
        hx-target="closest .clipping-item">
    <fieldset>
    <textarea
            name="content"
            aria-label="Clipping content"
    >{{ data.content }}</textarea>
    </fieldset>

    <div role="group">
        <input
                type="submit"
                value="{{ data.actions_map.save.label }}"
        />
        <button
                class="secondary"
                {{ hx_link(data.actions_map.cancel.url) }}
        >
            {{ data.actions_map.cancel.label }}
        </button>
    </div>
</form>
{% endblock %}
{% block clipping_actions %}{% endblock %}
