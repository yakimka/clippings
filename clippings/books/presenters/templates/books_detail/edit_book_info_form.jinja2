<div hx-target="this" style="display: flex; align-items: center; gap: var(--pico-spacing);">
    <div>
        <img src="{{ data.cover_url }}" width="400" alt="Book Image" class="book-cover">
    </div>
    <form
            {{ hx_link(data.actions_map.save.url) }}
            hx-swap="outerHTML">
        <fieldset>
            {% with fields=data.fields_meta %}
            <label>
                {{ fields.title.label }}
                <input
                        name="title"
                        placeholder="{{ fields.title.label }}"
                        value="{{ data.title }}"
                />
            </label>
            <label>
                {{ fields.author.label }}
                <input
                        name="author"
                        placeholder="{{ fields.author.label }}"
                        value="{{ data.author }}"
                />
            </label>
            <label>
                {{ fields.rating.label }}
                <input
                        name="rating"
                        placeholder="{{ fields.rating.label }}"
                        value="{{ data.rating }}"
                        type="number"
                        min="{{ fields.rating.min }}"
                        max="{{ fields.rating.max }}"
                />
            </label>
            <label>
                {{ fields.cover.label }}
                <input
                        name="cover"
                        placeholder="{{ fields.cover.label }}"
                        type="file"
                />
            </label>
            {% endwith %}
        </fieldset>

        <div role="group">
            <input
                    type="submit"
                    value="{{ data.actions_map.save.label }}"
            />
            <button
                    class="secondary"
                    {{ hx_link(data.actions_map.cancel.url) }}
            >
                {{ data.actions_map.cancel.label }}
            </button>
        </div>
    </form>
</div>
