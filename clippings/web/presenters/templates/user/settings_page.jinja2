{% extends "base.jinja2" %}
{% block title %}{{ data.page_title }}{% endblock %}
{% block body %}
<main class="container">
    <h1>{{ data.page_title }}</h1>
    <div class="grid">
        <div>
            {% for action in data.actions %}
            {% if action.description %}
            <p>{{ action.description }}</p>
            {% endif %}
            <button
                    {{ hx_action(action) }}
                    hx-swap="textContent"
                    hx-disabled-elt="this"
                    class="outline contrast"
            >{{ action.label }}
            </button>
            {% endfor %}
        </div>
        <div></div>
    </div>
</main>
{% endblock %}
