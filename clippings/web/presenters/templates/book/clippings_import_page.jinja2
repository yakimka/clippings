{% extends "base.jinja2" %}
{% block title %}{{ data.page_title }}{% endblock %}
{% block body %}
    <main class="container">
        <h1>{{ data.page_title }}</h1>

        <section hx-target="this" hx-swap="outerHTML" class="grid">
            <form
                    hx-encoding="multipart/form-data"
                    hx-disabled-elt="find #submit"
                    {{ hx_action(data.import_action) }}>
                <input
                        name="file"
                        type="file"
                        placeholder="{{ data.import_action.label }}"
                />
                <input
                        id="submit"
                        type="submit"
                        value="{{ data.import_action.label }}"
                />
            </form>
            <div></div>
            <div></div>
        </section>
    </main>
{% endblock %}
