{% extends "book/detail/clipping.jinja2" %}
{% block after_clipping_content %}
<h6>New note</h6>
<hr>
<section>
<form
        {{ hx_action(data.actions_map.save) }}
        hx-target="closest .clipping-item">
    <fieldset>
    <textarea
            name="content"
            required
            aria-label="New note"
    ></textarea>
    </fieldset>

    <div role="group">
        <input
                type="submit"
                value="{{ data.actions_map.save.label }}"
        />
        <button
                class="secondary"
                {{ hx_action(data.actions_map.cancel) }}
        >
            {{ data.actions_map.cancel.label }}
        </button>
    </div>
</form>
</section>
{% endblock %}
{% block clipping_actions %}{% endblock %}
